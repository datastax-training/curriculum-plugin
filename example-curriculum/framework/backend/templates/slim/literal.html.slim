// NOTE if style is not set, then it's a literal paragraph (not a literal block)
- _has_title = title?
- content_for :pre
  pre.screen id=(id unless _has_title) class=role : samp =content
- if _has_title
  figure.listing id=id
    figcaption=title
    - yield_content :pre
- else
  - yield_content :pre
